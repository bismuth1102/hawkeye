<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:layout_width="230dp"
    android:layout_height="300dp"
    android:background="@drawable/popup_radius"
    android:padding="5dp"
    android:layout_gravity="center"
    tools:visibility="visible"
    tools:context=".skillion.hawkeye.video.VideoViewActivity"
    >

    <TableLayout
        android:layout_width="224dp"
        android:layout_height="320dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:textColor="@color/darkBlue"
                android:textStyle="bold"
                android:text="Video Options"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:gravity="center"
                />

        </TableRow>

        <TableRow
            android:layout_width="10dp"
            android:layout_height="76dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="0.5">

                <Button
                    android:id="@+id/upload_video"
                    android:layout_width="208dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_blue"
                    android:fontFamily="sans-serif-medium"
                    android:paddingLeft="40dp"
                    android:text="Upload Videos"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="#FFFFFF"
                    android:elevation="10dp"
                    android:paddingLeft="15dp"
                    android:scaleY=".7"
                    android:scaleX=".7"
                    android:src="@drawable/upload"
                    android:tint="#FFFFFF"
                    android:visibility="visible" />
            </RelativeLayout>
        </TableRow>


        <TableRow
            android:layout_width="10dp"
            android:layout_height="76dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="0.5">

                <Button
                    android:id="@+id/save_video"
                    android:layout_width="208dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_blue"
                    android:fontFamily="sans-serif-medium"
                    android:paddingLeft="50dp"
                    android:text="Save Videos"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="#FFFFFF"
                    android:elevation="10dp"
                    android:paddingLeft="20dp"
                    android:scaleY=".7"
                    android:scaleX=".7"
                    android:src="@drawable/save_video"
                    android:tint="#FFFFFF"
                    android:visibility="visible" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="10dp"
            android:layout_height="76dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="0.5">

                <Button
                    android:id="@+id/cancel_video"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="sans-serif-light"
                    android:scaleX=".8"
                    android:scaleY=".8"
                    android:text="Cancel"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/darkBlue"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </RelativeLayout>
        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>